# Maintainer: Breadtard <breadboithetard@gmail.com>
pkgname=uwuterm
pkgver=0.69
arch=('x86_64')
pkgrel=1
pkgdesc="bread's very bad terminal emulator"
depends=('vte3')
makedepends=('zstd' 'meson')
license=('breadlicense')
source=("uwuterm-src.tar.zstd")
md5sums=(SKIP) #generate with 'makepkg -g'

prepare() {
	cd "$scrdir"
	tar xvf uwuterm-src.tar.zstd
	meson build
}

build() {
	cd "$srcdir"
	cd build
	meson compile
}

check() {
	cd "$srcdir"
	echo "pretend the check is done lmao"
}

package() {
	cd "$srcdir"
	cd build
	install -D -m 755 uwuterm $pkgdir/usr/bin/uwuterm
}
